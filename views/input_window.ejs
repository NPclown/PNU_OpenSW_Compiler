<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
</head>
<body>
<label><input type="checkbox" name="isDir" value="dir"> Directory?</label>
<input id="new_name" type="text">
<input id="go" type="button" value="제출">
</body>
<script>
    $("#go").click(function (event){
        if ($("input:checkbox[name='isDir']").is(":checked") == true){
            var name = $("#new_name").val();
            window.opener.postMessage("d:"+name, '*');
            window.close();
        } else {
            var name = $("#new_name").val();
            window.opener.postMessage("n:"+name, '*');
            window.close();
        }
    });

</script>
</html>